<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/product_top_sell_container"
    android:layout_width="190dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:elevation="8dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="4dp"
        android:paddingBottom="4dp">

        <ImageView
            android:id="@+id/product_top_sell_img"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/laptop_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.466"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/product_top_sell_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto"
            android:justificationMode="inter_word"
            android:maxLines="1"
            android:text="Laptop Asus Gaming Rog Strix G15 G513IH HN015W"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/product_top_sell_img"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/product_top_sell_img"
            app:layout_constraintTop_toBottomOf="@+id/product_top_sell_img" />

        <TextView
            android:id="@+id/product_top_sell_price"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto"
            android:maxLines="3"
            android:text="Ä‘ 20.000.000"
            android:textColor="@color/secondaryColor"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/product_top_sell_name"
            app:layout_constraintTop_toBottomOf="@+id/product_top_sell_name" />

        <TextView
            android:id="@+id/product_top_sell_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_star"
            android:drawablePadding="2dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto"
            android:gravity="center_vertical"
            android:maxLines="3"
            android:text="4.5"
            android:textColor="#7f8c8d"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/product_top_sell_price"
            app:layout_constraintEnd_toEndOf="@+id/product_top_sell_name"
            app:layout_constraintHorizontal_bias="0.96"
            app:layout_constraintStart_toEndOf="@+id/product_top_sell_price"
            app:layout_constraintTop_toTopOf="@+id/product_top_sell_price"
            app:layout_constraintVertical_bias="0.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>